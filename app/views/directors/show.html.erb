<div class="page-header">
  <h3>Director #<%= @director.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @director.name %></dd>

      <dt>Dob</dt>
      <dd><%= @director.dob %></dd>

      <dt>Bio</dt>
      <dd><%= @director.bio %></dd>

      <dt>Image url</dt>
      <dd><%= @director.image_url %></dd>

      <dt>Number of Movies</dt>
      <dd><%= @director.movies.count %></dd>

      <dt>List of movies</dt>
      <% @director.movies.each do |movie| %>
      <dd><%= movie.title%></dd>
      <% end %>


      </dl>

    <a href="/directors/new">Add a New Director </a>

    <div class="btn-group btn-group-justified">
      <a href="/directors" class="btn btn-primary">
        Back
      </a>
      <a href="/directors/<%= @director.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_director/<%= @director.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
  <h2>Add New Movie</h2>

  <form action="/create_movie" method="post">
    <!-- Hidden input for authenticity token to protect from forgery -->
    <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
    <input name="director_id" type="hidden" value="<%= @director.id %>">


    <!-- Label and input for title -->
    <div class="form-group">
      <label for="title" class="control-label">
        Title
      </label>

      <input type="string" id="title" name="title" placeholder="Title" class="form-control" >
    </div>

    <!-- Label and input for year -->
    <div class="form-group">
      <label for="year" class="control-label">
        Year
      </label>

      <input type="integer" id="year" name="year" placeholder="Year" class="form-control" >
    </div>

    <!-- Label and input for duration -->
    <div class="form-group">
      <label for="duration" class="control-label">
        Duration
      </label>

      <input type="integer" id="duration" name="duration" placeholder="Duration"  class="form-control" >
    </div>

    <!-- Label and input for description -->
    <div class="form-group">
      <label for="description" class="control-label">
        Description
      </label>

      <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
    </div>

    <!-- Label and input for image_url -->
    <div class="form-group">
      <label for="image_url" class="control-label">
        Image url
      </label>

      <input type="string" id="image_url" name="image_url" placeholder="Image url" class="form-control" >
    </div>







    </div>


    <button class="btn btn-success">
      Create Movie
    </button>
    or
    <a href="/directors/<%= @director.id %>">Cancel</a>
  </form>
</div>
